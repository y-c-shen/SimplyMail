{
  "name": "frontend",
  "version": "0.1.0",
  "description": "Summarizes Gmail content and checks links for safety",
  "permissions": [
    "storage", 
    "tabs"
  ],
  "host_permissions": [
    "*://mail.google.com/*",
    "https://safebrowsing.googleapis.com/*",
    "https://checkurl.phishtank.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/mail/*"],
      "js": [
        "LinkChecker.js",
        "contentScript.js"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/ext-icon.png",
      "24": "assets/ext-icon.png",
      "32": "assets/ext-icon.png"
    },
    "default_title": "Gmail Summarizer & Link Checker",
    "default_popup": "popup.html"
  },
  "manifest_version": 3
}